<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="32dp"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SGS - Controle de Rondas"
            android:textSize="26sp"
            android:textColor="@color/texto"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Botão Acessar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAcessar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acessar"
            android:textSize="16sp"
            android:textColor="@color/branco"
            app:backgroundTint="@color/botao"
            android:layout_marginBottom="16dp"/>

        <!-- Botão Tema Claro/Escuro -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnModoTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo Claro/Escuro"
            android:textSize="16sp"
            android:textColor="@color/botao"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/botao"
            app:strokeWidth="1dp"
            android:layout_marginBottom="32dp" />

        <!-- Créditos -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo Software-Solutions"
            android:textSize="14sp"
            android:textColor="@color/texto"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="129dp"
        android:layout_height="138dp"
        app:srcCompat="@drawable/ic_control_camera"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
