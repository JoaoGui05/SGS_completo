<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".RegistroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/fundo">

        <TextView
            android:text="Registro de Ponto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegistrarEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Entrada"
            android:textColor="#FFFFFF"
            android:backgroundTint="#003366"
            android:layout_marginBottom="16dp"
            android:padding="12dp"/>

        <TextView
            android:text="Horários Registrados"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtHorarioEntrada1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrada"
            android:textColor="@android:color/black"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtHorarioSaida1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saída"
            android:textColor="@android:color/black"
            android:padding="4dp" />

        <TextView
            android:text="Histórico de Pontos"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ontem: 08:00 - 17:00"
            android:textColor="@android:color/black"
            android:padding="4dp" />

        <Button
            android:id="@+id/btnRegistrarSaida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Saída"
            android:textColor="#FFFFFF"
            android:backgroundTint="#003366"
            android:layout_marginTop="24dp"
            android:padding="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/PontosView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</FrameLayout>
